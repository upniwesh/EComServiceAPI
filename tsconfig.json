{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "newLine": "LF",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": false,
    "strictNullChecks": false,
    "target": "es2016",
    "typeRoots": [ "./types", "./node_modules/@types"]
  },
  "include": [
    "src/**/*.ts", "src/services/mailHelper.ts", "src/config/keys.ts", "src/config/JWTAuth.ts", "src/config/passportSetup.ts", "src/services/covidUser.service.ts"
  ],
  "exclude": [
    "node_modules", 
    "typings"
  ]
}
