{
  "name": "ecomservice",
  "version": "0.0.1",
  "description": "EComService app rest API",
  "license": "MIT",
  "scripts": {
    "tsc": "tsc",
    "start": "nodemon",
    "start:in:docker": "node dist/index.js",
    "start:cluster": "./node_modules/.bin/ts-node",
    "build": "npm run clean && tsc && npm run swagger",
    "clean": "rimraf dist",
    "lint": "tslint ./src/**/*.ts ./test/**/*.ts",
    "lint:fix": "tslint --fix ./src/**/*.ts ./test/**/*.ts -t verbose",
    "pretest": "cross-env NODE_ENV=test npm run build && npm run lint",
    "test": "cross-env NODE_ENV=test mocha --exit",
    "test:coverage": "nyc npm run test",
    "swagger": "swaggerGen -c ./swagger.config.yml"
  },
  "dependencies": {    
    "@types/ejs": "^2.6.3",
    "@types/express-session": "^1.15.15",    
    "@types/md5": "^2.1.33",
    "@types/mysql": "^2.15.10",
    "@types/node-schedule": "^1.2.4",    
    "@types/request-promise-native": "^1.0.17",
    "@types/swagger-ui-express": "^3.0.1",    
    "cors": "^2.8.5",
    "dotenv": "8.0.0",
    "ejs": "^2.7.1",
    "express": "^4.17.1",
    "express-session": "^1.17.0",    
    "mysql": "^2.18.1",
    "mysql2": "^2.1.0",    
    "passport-jwt": "^4.0.0",    
    "reflect-metadata": "^0.1.13",
    "request-promise-native": "^1.0.8",
    "sequelize": "^5.21.7",
    "sequelize-typescript": "^1.1.0",    
    "ts-md5": "^1.2.5",    
    "typescript-ioc": "^1.2.5",
    "typescript-rest": "^2.2.0",
    "typescript-rest-swagger": "^1.0.3"    
  },
  "devDependencies": {
    "@types/chai": "4.1.7",
    "@types/cors": "2.8.4",
    "@types/dotenv": "6.1.1",
    "@types/express": "4.16.0",
    "@types/mocha": "5.2.5",    
    "@types/node": "^12.12.37",
    "@types/passport-jwt": "^3.0.1",
    "@types/request": "2.48.1",
    "chai": "4.2.0",
    "cross-env": "5.2.0",
    "mocha": "5.2.0",    
    "request": "^2.87.0",
    "source-map-support": "0.5.9",
    "ts-node": "7.0.1",
    "ts-node-dev": "^1.0.0-pre.42",
    "tslint": "5.17.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "3.5.1"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "report-dir": "./reports/coverage",
    "sourceMap": true,
    "instrument": true
  }
}
